{
 "configs":[
  "/config.live.json",
  "/config.options.json",
  "/lang/lang.{{lang}}.json",
  "/modules.json"
 ],
 "title": [{
   "type":"text",
   "title":"{{LangOptions1}}"
  }],
 "class":"col-sm-offset-1 col-sm-10 col-md-offset-2 col-md-8 col-lg-offset-3 col-lg-6",
 "content":[
  {
   "type":"h5",
   "title":"{{SSDP}}",
   "class":"alert-info"
  },

  {
   "type":"loadJson",
   "state":"header.json"
  },

  {
   "type":"text",
   "module":"ddns",
   "name":"alert-ifttt",
   "title":"<button class=\"close\" onclick=\"hide('alert-ifttt',this)\" type=\"button\">Ã—</button>{{LangIfttt1}}",
   "class":"alert alert-info {{alert-ifttt}}"
  },

  {
   "type":"rgb",
   "title":"/img/swatches.png",
   "name":"color",
   "module":"rgb",
   "state":"{{colorRGB}}",
   "response":"[[rgb]]",
   "action":"rgbs set [[color]] [[brightness]]",
   "style":"cursor:pointer;width:100%"
  },

  {
   "type":"range",
   "title":"R",
   "name":"colorR",
   "state":"{{brightnessRGB}}",
   "response":"[[rgb]]",
   "action":"rgbs set [[colorR]] [[colorG]] [[colorB]] [[brightness]]",
   "pattern":"min=0 max=255 step=1"
  },
  {
   "type":"range",
   "title":"G",
   "name":"colorG",
   "state":"{{brightnessRGB}}",
   "response":"[[rgb]]",
   "action":"rgbs set [[colorR]] [[colorG]] [[colorB]] [[brightness]]",
   "pattern":"min=0 max=255 step=1"
  },
  {
   "type":"range",
   "title":"B",
   "name":"colorB",
   "state":"{{brightnessRGB}}",
   "response":"[[rgb]]",
   "action":"rgbs set [[colorR]] [[colorG]] [[colorB]] [[brightness]]",
   "pattern":"min=0 max=255 step=1"
  },
  {
   "type":"hr"
  },


  {
   "type":"h4",
   "title":"{{LangTime8}}"
  },
  {
   "type":"select",
   "state":"{{timeRGB}}",
   "name":"time",
   "module":"rgb",
   "response":"[[rgb]]",
   "action":"pulse on rgbs [[time]]s",
   "title":{
    "60":"1",
    "300":"5",
    "600":"10",
    "1500":"15",
    "1800":"30",
    "3600":"60",
    "5400":"1:30",
    "7200":"2:00",
    "10800":"3:00",
    "0":"&#8734;"
   }
  },
  {
   "type":"range",
   "title":"{{LengBrightness}}",
   "name":"brightness",
   "module":"rgb",
   "state":"{{brightnessRGB}}",
   "response":"[[rgb]]",
   "action":"rgbs set [[color]] [[brightness]]",
   "pattern":"min=0 max=255 step=1"
  },

  {
   "type":"hr"
  },

  {
   "type":"button",
   "title":"({{rgb}}?'{{LangOff}}':'{{LangOn}}')",
   "name":"rgb",
   "response":"[[rgb]]",
   "action":"rgbs not",
   "class":"'btn btn-block btn-lg btn-'+({{rgb}}?'info':'primary')"
  },
  {
   "type":"hr",
   "module":"timers"
  },


  {
   "type":"h2",
   "module":"timers",
   "title":"{{LangTimer}}"
  },
  {
   "type":"table",
   "module":"timers",
   "state":"timer.save.json",
   "title":{
    "module":"",
    "trigger":"{{LangOnM}}/{{LangOffM}}",
    "day":"{{LangDay}}",
    "time":"{{LangTime4}}",
    "work":"{{LangWorkTime}}"
   },
   "class":"table alert alert-dismissible alert-warning",
   "style":"width:100%;"
  },
  {
   "type":"link",
   "module":"timers",
   "title":"{{LangTimer}}",
   "action":"page.htm?timer",
   "class":"btn btn-block btn-default"
  },


  {
   "type":"hr"
  },


  {
   "type":"chart",
   "title":"{{LangA0}}",
   "state":"charts.json?data=A0&data1=highAlarmA0&data2=lowAlarmA0",
   "module":"A0",
   "action":"/page.htm?chart&A0&highAlarmA0&lowAlarmA0",
   "style":"height:200px;margin-left:-20px"
  },

  {
   "type":"link",
   "title":"<i class=\"opt-img\"></i> {{LangSetting3}}",
   "action":"/page.htm?setup",
   "class":"btn btn-block btn-default"
  },
  {
   "type":"link",
   "module":"admin",
   "title":"{{LangReset1}}",
   "action":"javascript:if(confirm(renameBlock(jsonResponse,'{{LangReset3}}'))){send_request(this,'/restart?device=ok');toggle('restart-esp');setTimeout(function(){toggle('restart-esp');},20000);}",
   "class":"btn btn-block btn-warning"
  }
 ]
}
